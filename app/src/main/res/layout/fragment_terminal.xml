<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:example="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/controlLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/controlLineRts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48sp"
            android:textOff="RTS"
            android:textOn="RTS" />

        <ToggleButton
            android:id="@+id/controlLineCts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48sp"
            android:clickable="false"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="CTS"
            android:textOn="CTS" />

        <View
            android:layout_height="match_parent"
            android:layout_width="6dp" />

        <ToggleButton
            android:id="@+id/controlLineDtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48sp"
            android:textOff="DTR"
            android:textOn="DTR" />

        <ToggleButton
            android:id="@+id/controlLineDsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:minWidth="48sp"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="DSR"
            android:textOn="DSR" />

        <View
            android:layout_height="match_parent"
            android:layout_width="6dp" />

        <ToggleButton
            android:id="@+id/controlLineCd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:minWidth="48sp"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="CD"
            android:textOn="CD" />

        <ToggleButton
            android:id="@+id/controlLineRi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48sp"
            android:clickable="false"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="RI"
            android:textOn="RI" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
        android:layout_width="match_parent"
          android:orientation="vertical"
        android:layout_height="wrap_content">


        <de.kai_morich.simple_usb_terminal.ExpandablePanel
            android:id="@+id/expandablePanelGen"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            example:collapsedHeight="50dp"
            example:content="@+id/valueGen"
            example:handle="@+id/expandGen"
            example:isviewgroup="true"
            example:viewgroup="@+id/expandLGen" >

            <LinearLayout
                android:id="@+id/valueGen"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:paddingStart="1dp"
                android:weightSum="200">

                <TableLayout
                    android:id="@+id/GenTable"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/TextGenWave"
                            android:text="Wave:"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextGenDummy"
                            android:text="Sinus 300 mV"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/TextGenFrequency"
                            android:text="Frequency=1000Hz"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextGenMinus"
                            android:text="-"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextGenPlus"
                            android:text="+"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/expandLGen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="100">

                <View
                    android:id="@+id/viewGen"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="30"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/expandGen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="70"
                    android:text="Gen" />
            </LinearLayout>
        </de.kai_morich.simple_usb_terminal.ExpandablePanel>

        <de.kai_morich.simple_usb_terminal.ExpandablePanel
            android:id="@+id/expandablePanelUfd"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            example:collapsedHeight="50dp"
            example:content="@+id/value"
            example:handle="@+id/expand"
            example:isviewgroup="true"
            example:viewgroup="@+id/expandL" >

            <LinearLayout
                android:id="@+id/value"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:paddingStart="1dp">

                <TableLayout
                    android:id="@+id/UfdTable"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/TextUfdF"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextUfdUrms"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/TextUfdT"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextUfdUave"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/TextUfdD"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextUfdUpp"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/TextUfdN"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                        <TextView
                            android:id="@+id/TextUfdResetButton"
                            android:text="00.00"
                            android:textStyle="bold"
                            android:typeface="monospace">
                        </TextView>

                    </TableRow>

                </TableLayout>


                <RadioGroup
                    android:id="@+id/RLCRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/radio_auto"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/rbutt_auto" />

                    <RadioButton
                        android:id="@+id/radio_f95"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="@string/rbutt_f95" />

                    <RadioButton
                        android:id="@+id/radio_f1k"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="@string/rbutt_f1k" />

                    <RadioButton
                        android:id="@+id/radio_f10k"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="@string/rbutt_f10k" />

                    <RadioButton
                        android:id="@+id/radio_f95k"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="@string/rbutt_f95k" />

                    <RadioButton
                        android:id="@+id/radio_f160k"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="@string/rbutt_f160k" />

                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/expandL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="100">

                <View
                    android:id="@+id/view"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="30"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/expand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="70"
                    android:text="Ufd" />
            </LinearLayout>
        </de.kai_morich.simple_usb_terminal.ExpandablePanel>

        <de.kai_morich.simple_usb_terminal.ExpandablePanel
            android:id="@+id/expandablePanelRLC"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            example:collapsedHeight="50dp"
            example:content="@+id/valueRLC"
            example:handle="@+id/expandRLCButton"
            example:isviewgroup="true"
            example:viewgroup="@+id/expandLRLC" >

            <LinearLayout
                android:id="@+id/valueRLC"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:paddingStart="1dp"
                android:weightSum="200">

                <TableLayout
                    android:id="@+id/RLCTable"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TableRow>
                                <CheckBox
                                    android:id="@+id/checkBoxAuto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Auto"
                                    android:typeface="monospace">
                                </CheckBox>
                                <CheckBox
                                    android:id="@+id/checkBox95Hz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="95Hz"
                                    android:typeface="monospace">
                                </CheckBox>
                            </TableRow>

                            <TableRow>
                                <CheckBox
                                    android:id="@+id/checkBox1kHz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1kHz"
                                    android:typeface="monospace">
                                </CheckBox>
                                <CheckBox
                                    android:id="@+id/checkBox10kHz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10kHz"
                                    android:typeface="monospace">
                                </CheckBox>
                            </TableRow>

                            <TableRow>
                                <CheckBox
                                    android:id="@+id/checkBox95kHz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="95kHz"
                                    android:typeface="monospace">
                                </CheckBox>
                                <CheckBox
                                    android:id="@+id/checkBox160kHz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="160kHz"
                                    android:typeface="monospace">
                                </CheckBox>
                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/TextCL"
                                android:text="@string/rlc_table_string_none"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:typeface="monospace">
                            </TextView>

                            <TextView
                                android:id="@+id/TextR"
                                android:text="@string/rlc_table_string_none"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:typeface="monospace">
                            </TextView>

                            <TextView
                                android:id="@+id/TextZ"
                                android:text="@string/rlc_table_string_none"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:typeface="monospace">
                            </TextView>

                            <TextView
                                android:id="@+id/TextQtg"
                                android:text="@string/rlc_table_string_none"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:typeface="monospace">
                            </TextView>

                            <TextView
                                android:id="@+id/TextEqS"
                                android:text="@string/rlc_table_string_none"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:typeface="monospace">
                            </TextView>

                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandLRLC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="100">

                <View
                    android:id="@+id/viewRLC"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="30"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/expandRLCButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="70"
                    android:text="RLC" />
            </LinearLayout>
        </de.kai_morich.simple_usb_terminal.ExpandablePanel>
      </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send_white_24dp" />
    </LinearLayout>

</LinearLayout>

